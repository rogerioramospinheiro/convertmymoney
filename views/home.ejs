<%- include('header') %>
<form method="GET" action="/cotacao">
    <div class="box-centered">
        <div class="form-group">
            <input name="cotacao" class="form-control" placeholder="Cotacao dolar" value="<%= cotacao %>">
        </div>
        <div class="form-group">
            <input name="quantidade" class="form-control" placeholder="Quantidade de dolares">
        </div>
        <button type="submit" class="btn btn-default" style="background-color: crimson; color: white">Converter!</button>
    </div>
</form>
<%- include('footer') %>